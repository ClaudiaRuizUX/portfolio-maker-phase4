<h1>Projects</h1>
<% if session[:user_id] %>
  <h1><%= @user.name %></h1>
  <h2>GitHub UID: <%= @user.uid %></h2>
  <ul>
    <% @projects.each do |project| %>
      <li><%= link_to project.title, project_path(project) %></li>
    <% end %>
  </ul>
  <%= form_tag ({controller: 'sessions', action: 'destroy', method: 'post'}) do %>
    <input type=submit value='logout'>
  <% end %>
<% else %>
  <%= link_to('Log in with GitHub!', '/auth/github', method: :post) %>
  <% end %>