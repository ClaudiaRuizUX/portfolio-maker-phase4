
<h1><%= @section.title %></h1>

<%= link_to "edit", edit_section_path(@section) %>
<%= button_to "Delete Section", section_path(@section), method: :delete %>

<% if defined?(@section.projects) %>
  <% @section.projects.each do |project| %>
    <h3><%= link_to project.title, project_path(project.id) if project.id %></h3>
  <% end %>
<% else %>
  <h3>No Projects</h3>
<% end %>


