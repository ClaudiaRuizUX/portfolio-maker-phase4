<%= link_to 'Back', skills_path %>
<h1>New Skill</h1>

<%= form_for(@skill) do |s| %>
  
    <% if @skill.project.nil? %>
      <%= s.select :project_id, options_from_collection_for_select(Project.all, :id, :title) %><br>
      <% else %>
      <%= s.hidden_field :project_id %>
    <% end %>
  
    <div class="field">
        <%= s.label :name, 'Skill Name:' %><br>
        <%= s.text_field :name %>
    </div>

    <div class="actions">
        <%= s.submit %>
    </div>
<% end %>
